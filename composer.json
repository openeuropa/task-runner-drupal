{
    "name": "openeuropa/task-runner-drupal",
    "description": "Drupal specific commands for the Openeuropa task runner.",
    "keywords": ["Robo", "automation", "drupal", "task-runner", "yaml"],
    "license": "EUPL-1.2",
    "type": "library",
    "require": {
        "php": ">=7.2",
        "nuvoleweb/robo-config": "^0.2.1",
        "openeuropa/task-runner": "dev-ISAICP-6036 as dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0||~7.0",
        "slevomat/coding-standard": "~6",
        "squizlabs/php_codesniffer": "~3"
    },
    "autoload": {
        "psr-4": {
            "OpenEuropa\\TaskRunnerDrupal\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenEuropa\\TaskRunnerDrupal\\Tests\\": "./tests/",
            "OpenEuropa\\TaskRunner\\Tests\\": "./vendor/openeuropa/task-runner/tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
